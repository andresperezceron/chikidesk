<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layoutMarginItems_default"
    card_view:cardCornerRadius="@dimen/strokeRadius_x2"
    card_view:cardElevation="@dimen/cardElevation_x1">

    <TextView
        android:id="@+id/txvItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/item_fore_gre106"
        android:background="@color/item_back_gre101"/>
</androidx.cardview.widget.CardView>