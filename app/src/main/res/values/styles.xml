<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="MyHintAppearance" >
        <item name="android:textSize">@dimen/textSize_x2</item>
    </style>

    <style name="editTextOnlyRead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="edtOnMoldeMaquinaForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="labelsShowDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lab_fore_gre106</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="editTextOnlyNumericFiveDigits">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editTextOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_x3</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/textSize_x3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
</resources>