<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="Widget.App.Button.MainMenu" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/widthButton_x2</item>
        <item name="android:layout_height">@dimen/heightButton_x2</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="cornerRadius">@dimen/strokeRadius_x1</item>
        <item name="strokeWidth">@dimen/strokeWidth_x1</item>
        <item name="strokeColor">@color/strokes_gre107</item>
        <item name="backgroundTint">@color/btn_back_gre105</item>
    </style>

    <!-- New Style for Floating Action Buttons -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x2</item>
        <item name="tint">@color/fab_fore_gre108</item>
        <item name="backgroundTint">@color/fab_back_gre101</item>
    </style>

    <style name="MyHintAppearance" >
        <item name="android:textSize">@dimen/textSize_x2</item>
    </style>

    <style name="editTextOnlyRead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="edtOnMoldeMaquinaForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_gre108</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="labelsShowDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lab_fore_gre106</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="editTextOnlyNumericFiveDigits">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editTextOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_x3</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/textSize_x3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
</resources>